{
  "banner" : [
    "/**",
    " * ╔════╦═╤═╤═╗ <%= pkg.name %> - <%= pkg.description %>",
    " * ║  ──╢ │ │ ║ @version v<%= pkg.version %>",
    " * ╟──  ║     ║ @link <%= pkg.homepage %>",
    " * ╚════╩══╧══╝ @license <%= pkg.license %>",
    " */"
  ],
  "autoprefixer": {
    "browsers": ["last 2 versions"],
    "cascade": false
  },
  "linter": {
    "config": "linter.yml"
  },
  "scss": {
    "src": "assets/scss/",
    "dest": "assets/css/",
    "filemask": "**/*.scss"
  },
  "browserSync": {
    "proxy": "your.domain",
    "logLevel": "warn",
    "logFileChanges": false
  },
  "tasks": {
    "list": ["scss", "browser-sync"],
    "default": ["scss"]
  }
}